{
  "name": "__MSG_appName__",
  "short_name": "FontARA",
  "version": "3.9",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "author": "Mostafa Alahyari",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["script/background.js"]
  },
  "options_ui": {
    "page": "custom_font/index.html",
    "open_in_tab": true
  },
  "permissions": ["tabs", "storage", "*://*/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "https://*.twitter.com/*",
        "https://www.linkedin.com/*",
        "https://www.instagram.com/*",
        "https://www.facebook.com/*",
        "https://*.wikipedia.org/*",
        "https://web.whatsapp.com/*",
        "https://web.telegram.org/*",
        "https://trello.com/*",
        "https://feedly.com/*",
        "https://www.inoreader,com/*",
        "https://*.slack.com/*",
        "https://medium.com/*",
        "https://*.getpocket.com/*",
        "https://paper.dropbox.com/*",
        "https://virgool.io/*",
        "https://duckduckgo.com/*",
        "*://fa.wordpress.org/*",
        "*://wp-persian.com/*",
        "*://*.blogspot.com/*",
        "*://*.wordpress.com/*",
        "https://app.crisp.chat/*",
        "https://www.youtube.com/*",
        "https://www.goodreads.com/*",
        "https://mail.google.com/*",
        "https://hangouts.google.com/*",
        "https://github.com/*",
        "https://www.wunderlist.com/*",
        "https://messages.android.com/*",
        "https://*.google.*/*"
      ],
      "js": [
        "inject/global/script/contentscript.js",
        "inject/global/script/global.js"
      ],
      "css": ["inject/global/style/global.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://*.twitter.com/*"],
      "js": ["inject/twitter/script/contentscript.js"],
      "css": ["inject/twitter/style/twitter.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://*.twimg.com/*"],
      "js": ["inject/twitter/script/contentscript.js"],
      "css": ["inject/twitter/style/twitter.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": [
        "inject/linkedin/script/contentscript.js",
        "inject/linkedin/script/linkedin.js"
      ],
      "css": ["inject/linkedin/style/linkedin.css"],
      "run_at": "document_idle",
      "all_frames": true
    },
    {
      "matches": ["https://www.instagram.com/*"],
      "js": ["inject/instagram/script/contentscript.js"],
      "css": ["inject/instagram/style/instagram.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://www.facebook.com/*"],
      "js": ["inject/facebook/script/contentscript.js"],
      "css": ["inject/facebook/style/facebook.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://*.wikipedia.org/*"],
      "js": ["inject/wikipedia/script/contentscript.js"],
      "css": ["inject/wikipedia/style/wikipedia.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["inject/whatsapp/script/contentscript.js"],
      "css": ["inject/whatsapp/style/whatsapp.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://web.telegram.org/*"],
      "js": ["inject/telegram/script/contentscript.js"],
      "css": ["inject/telegram/style/telegram.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://trello.com/*"],
      "js": ["inject/trello/script/contentscript.js"],
      "css": ["inject/trello/style/trello.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://feedly.com/*"],
      "js": ["inject/feedly/script/contentscript.js"],
      "css": ["inject/feedly/style/feedly.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://www.inoreader.com/*"],
      "js": ["inject/inoreader/script/contentscript.js"],
      "css": ["inject/inoreader/style/inoreader.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://*.slack.com/*"],
      "js": [
        "inject/slack/script/contentscript.js",
        "inject/slack/script/slack.js",
        "inject/slack/script/slack-input.js"
      ],
      "css": ["inject/slack/style/slack.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://medium.com/*"],
      "js": [
        "inject/medium/script/contentscript.js",
        "inject/medium/script/medium.js"
      ],
      "css": ["inject/medium/style/medium.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://*.getpocket.com/*"],
      "js": [
        "inject/getpocket/script/contentscript.js",
        "inject/getpocket/script/getpocket.js"
      ],
      "css": ["inject/getpocket/style/getpocket.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://paper.dropbox.com/*"],
      "js": ["inject/paperdropbox/script/contentscript.js"],
      "css": ["inject/paperdropbox/style/paperdropbox.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://virgool.io/*"],
      "js": ["inject/virgool/script/contentscript.js"],
      "css": ["inject/virgool/style/virgool.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://duckduckgo.com/*"],
      "js": ["inject/duckduckgo/script/contentscript.js"],
      "css": ["inject/duckduckgo/style/duckduckgo.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://fa.wordpress.org/*", "*://wp-persian.com/*"],
      "js": ["inject/wordpress/script/contentscript.js"],
      "css": ["inject/wordpress/style/wordpress.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://*.wordpress.com/*"],
      "js": ["inject/wordpress/script/contentscript.js"],
      "css": ["inject/wordpressblog/style/wordpressblog.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["*://*.blogspot.com/*"],
      "js": ["inject/google/script/contentscript.js"],
      "css": ["inject/blogspot/style/blogspot.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "inject/youtube/script/contentscript.js",
        "inject/youtube/script/youtube.js"
      ],
      "css": ["inject/youtube/style/youtube.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://www.goodreads.com/*"],
      "js": [
        "inject/goodreads/script/contentscript.js",
        "inject/goodreads/script/goodreads.js"
      ],
      "css": ["inject/goodreads/style/goodreads.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://mail.google.com/*", "https://inbox.google.com/*"],
      "js": [
        "inject/gmail/script/contentscript.js",
        "inject/gmail/script/gmail.js"
      ],
      "css": ["inject/gmail/style/gmail.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://hangouts.google.com/*"],
      "js": ["inject/gmail/script/contentscript.js"],
      "css": ["inject/gmail/style/gmail.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://github.com/*"],
      "js": [
        "inject/github/script/contentscript.js",
        "inject/github/script/github.js"
      ],
      "css": ["inject/github/style/github.css"],
      "run_at": "document_end",
      "all_frames": true
    },
    {
      "matches": ["https://www.wunderlist.com/*"],
      "css": ["inject/wunderlist/style/wunderlist.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://messages.android.com/*"],
      "js": ["inject/messagesandroid/script/contentscript.js"],
      "css": ["inject/messagesandroid/style/messagesandroid.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": ["https://app.crisp.chat/*"],
      "js": ["inject/crisp/script/contentscript.js"],
      "css": ["inject/crisp/style/crisp.css"],
      "run_at": "document_start",
      "all_frames": true
    },
    {
      "matches": [
        "https://*.google.*/*"],
      "js": [
        "inject/google/script/contentscript.js",
        "inject/google/script/google.js"
      ],
      "css": ["inject/google/style/google.css"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "FontARA Font Changer",
    "default_popup": "popup/index.html"
  },
  "web_accessible_resources": [
    "fonts/file/*.woff",
    "fonts/file/*.woff2",
    "custom_font/script/option.js"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self';font-src 'self' data:;style-src 'self' 'unsafe-inline';"
}
